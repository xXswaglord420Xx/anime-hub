{
  "extends": "erb",
  "settings": {
    "import/resolver": {
      "webpack": {
        "config": "configs/webpack.config.eslint.js"
      }
    }
  },
  "rules": {
    "prettier/prettier": "off",
    "react/destructuring-assignment": "off",
    "import/prefer-default-export": "off",
    "flowtype/no-weak-types": "off",
    "prefer-destructuring": "off",
    "no-plusplus": "off"
  }
}
